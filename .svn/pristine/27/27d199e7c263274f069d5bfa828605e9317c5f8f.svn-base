@CHARSET "UTF-8";
img {
  float: left;
}
.clearfix {
  overflow: auto;
}

.container {
	position: relative;
}

.title {
	position: absolute;
	left: 200px;
	width: 100%;
	margin-top: 10px;
}

nav {
	margin-top: 30px;
	position: absolute;
	left: 0px;
	width: 200px;
}

section {
	/* position is static by default */
	margin-left: 210px;
}

footer {
	position: fixed;
	bottom: 0;
	left: 0;
	height: 50px;
	
	width: 100%;
	
	clear:both; background: #00ABEC; font-weight:bold; color:#FFF; padding:20px; 
}

body {
	margin-bottom: 120px;
}

 
a {font-size:52px; color:#000; text-decoration:none;}
a:hover { text-decoration:underline}
#formal{ font-size:28px; position: fixed; bottom: 2%; right: 2%; color:#FFF; text-decoration:none;}
#formal:hover { text-decoration:underline}





#links { position:relative; float:left; background:#CCCCCC; width:20%; clear:right; height:500px;}
#links ul { margin:20px; margin-top:0; padding:0;}
#links li { padding:5px; border-bottom:1px solid #FFF; color:#FFF; list-style:none;}
