@CHARSET "UTF-8";
h1 { font-size:5em; color:#FFF; font-weight:bold; background:#000; padding:20px}
h2 { padding:5px; font-size:x-large; font-weight:bold; color:#FF0; background:#999; border-bottom:3px solid #FFF; margin:20px; margin-bottom:0}
h3 { padding:5px; font-size:x-large; font-weight:bold; color:#FFF; background:#999; border-bottom:3px solid #000; margin:20px; margin-bottom:0}
h4 { font-size:18px; display: inline; color:#000;}

#content { position:relative; background: #FFF; font-size:small; font-family:Verdana; color:#000; width:100%; float:left; height:600px}
#content h3 { margin-bottom:1em}

#titleGradient {
	background:#000; 
	font-family: Georgia,'Times New Roman', serif; 
	font-size:5em; 
	color:#FFF; 
	font-weight:bold;
	padding:20px; 
}

#lean_overlay {
    position: fixed;
    z-index:100;
    top: 0px;
    left: 0px;
    height:100%;
    width:100%;
    background: #000;
    display: none;
}
.margin_file { margin:10%;}
.btn {cursor:pointer;}

.menu {
	cursor:pointer;
	display: block;
	background: #FFF;
	color: #000;
	text-decoration: none;
	width:200px;
	text-align: center;
	padding: 10px;
	margin: 0 0 0 0;
	font-size: 18px;
	text-transform: uppercase;
	font-weight: 300;
	border:solid 1px #fff;
}

.menu:hover {
	background: #D5D5D5;
	font-weight:bold
}

.menu:active {
	background: #000;
	color: #fff;
	font-weight:bold	
}
.checkbox_align{ 
	margin:-4px 0 0 0; 
	vertical-align:middle; 
}

.button {
	
	cursor:pointer;
	display: inline;
	background: #999;
	color: #FFF;
	text-decoration: none;
	width:100px;
	text-align: center;
	padding: 10px;
	font-size: 18px;
	text-transform: uppercase;
	font-weight: 300;
	border:solid 1px #fff;
}

.button:hover {
	background: #D5D5D5;
	color: #000;
	font-weight:bold
}

.button:active {
	background: #000;
	color: #fff;
	font-weight:bold	
}

.toggled {
	background: #999999;
}